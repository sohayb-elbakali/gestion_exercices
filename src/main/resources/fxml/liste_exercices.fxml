<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ExerciceController"
            styleClass="root">

    <top>
        <ToolBar styleClass="tool-bar">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- Groupe 1: Gestion des exercices -->
                <Button text="Ajouter un exercice" onAction="#handleAddExercice" 
                       styleClass="button button-blue" style="-fx-background-color: #2196f3; -fx-text-fill: white;"/>
                <Button text="Voir Détails" onAction="#handleVoirDetails" 
                       styleClass="button button-blue" style="-fx-background-color: #2196f3; -fx-text-fill: white;"/>
            </HBox>
            
            <Separator orientation="VERTICAL"/>
            
            <HBox spacing="10" alignment="CENTER">
                <!-- Groupe 2: Gestion des solutions -->
                <Button text="Ajouter une solution" onAction="#handleAddSolution" 
                       styleClass="button button-green" style="-fx-background-color: #43a047; -fx-text-fill: white;"/>
                <Button text="Voir les solutions" onAction="#handleViewSolutions" 
                       styleClass="button button-green" style="-fx-background-color: #43a047; -fx-text-fill: white;"/>
            </HBox>
            
            <Separator orientation="VERTICAL"/>
            
            <HBox spacing="10" alignment="CENTER">
                <!-- Groupe 3: Communication -->
                <Button text="Ouvrir le chat" onAction="#handleOpenChat" 
                       styleClass="button button-yellow" style="-fx-background-color: #FFC107; -fx-text-fill: black;"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <!-- Groupe 4: Navigation -->
                <Button text="Retour" onAction="#handleRetour" 
                       styleClass="button button-red" style="-fx-background-color: #e53935; -fx-text-fill: white;"/>
                <Button text="Déconnexion" onAction="#handleLogout" 
                       styleClass="button button-red" style="-fx-background-color: #e53935; -fx-text-fill: white;"/>
            </HBox>
        </ToolBar>
    </top>

    <center>
        <!-- Table pour afficher la liste des exercices -->
        <TableView fx:id="exerciceTable">
            <columns>
                <TableColumn text="Titre" fx:id="titreColumn" prefWidth="250"/>
                <TableColumn text="Date de création" fx:id="dateColumn" prefWidth="150"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
