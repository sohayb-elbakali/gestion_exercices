<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.UtilisateurController"
      prefWidth="400" prefHeight="350">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Connexion" styleClass="title-label" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <Label text="Email" styleClass="form-label"/>
    <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="form-field"/>
    
    <Label text="Mot de passe" styleClass="form-label"/>
    <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="form-field"/>
    
    <Label text="Rôle" styleClass="form-label"/>
    <ComboBox fx:id="roleComboBox" promptText="Sélectionnez votre rôle" styleClass="form-field" prefWidth="9999"/>
    
    <Button text="Se connecter" onAction="#handleLogin" styleClass="button-primary" prefWidth="200"/>
</VBox> 
