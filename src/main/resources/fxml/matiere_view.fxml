<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MatiereController"
      prefWidth="600" prefHeight="400" spacing="15" styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Déconnexion" onAction="#handleLogout" styleClass="button-red"/>
        <Button text="Gérer les matières" onAction="#manageMatieres" styleClass="button-green"/>
        <Button text="Gérer les utilisateurs" onAction="#manageUsers" styleClass="button-blue"/>
    </HBox>
    
    <Label text="Sélectionner une matière" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <HBox alignment="CENTER" spacing="10">
        <ComboBox fx:id="matiereComboBox" prefWidth="300"/>
        <Button text="Valider" onAction="#selectMatiere" styleClass="button-green"/>
    </HBox>
    
    <Separator />
    
    <HBox alignment="CENTER" spacing="20">
        <Button text="Mes Exercices" onAction="#showMyExercises" styleClass="button-blue" prefWidth="200"/>
        <Button text="Mes Solutions" onAction="#showMySolutions" styleClass="button-yellow" prefWidth="200"/>
    </HBox>
</VBox> 
