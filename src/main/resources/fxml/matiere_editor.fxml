<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="controllers.MatiereEditorController"
          xmlns:fx="http://javafx.com/fxml" 
          alignment="CENTER" 
          hgap="10" 
          vgap="10" 
          styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Gestion de Matière" style="-fx-font-size: 18px; -fx-font-weight: bold;" 
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" 
           GridPane.halignment="CENTER"/>
    
    <Label text="Nom de la matière :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nomField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"/>
    
    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
        <Button fx:id="submitButton" text="Ajouter" onAction="#handleSubmit" styleClass="button-green"/>
        <Button text="Annuler" onAction="#handleCancel" styleClass="button-red"/>
    </HBox>
    
    <Label fx:id="statusLabel" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" 
           GridPane.halignment="CENTER" style="-fx-text-fill: red;"/>
</GridPane> 
