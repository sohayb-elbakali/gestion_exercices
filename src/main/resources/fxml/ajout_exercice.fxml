<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.AjoutExerciceController"
      spacing="10.0" styleClass="root">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <Label text="Nouvel exercice" style="-fx-font-weight: bold;"/>
    <TextField fx:id="titreField" promptText="Titre de l'exercice"/>
    <TextArea fx:id="descriptionField" promptText="Description" wrapText="true"/>
    <Button fx:id="validerButton" text="Valider" styleClass="button button-blue"/>
    <Button text="Retour" onAction="#handleRetour" styleClass="button button-red"/>

</VBox>
