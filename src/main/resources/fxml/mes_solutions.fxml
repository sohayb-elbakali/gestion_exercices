<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MesSolutionsController" spacing="15" styleClass="root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Titre -->
    <Label text="Mes Solutions" styleClass="title-label" />

    <!-- Tableau des solutions -->
    <TableView fx:id="solutionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="contenuColumn" text="Contenu" prefWidth="200" />
            <TableColumn fx:id="dateColumn" text="Date de création" prefWidth="150" />
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Retour" onAction="#handleRetour" styleClass="button button-blue"/>
        <Button text="Déconnexion" onAction="#handleLogout" styleClass="button button-red"/>
    </HBox>
</VBox>
