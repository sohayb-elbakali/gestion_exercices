<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="controllers.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" styleClass="root">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Email :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Mot de passe :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="RÃ´le :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="roleComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
        <Button text="Se connecter" onAction="#handleLogin" style="-fx-background-color: #4285F4; -fx-text-fill: white;"/>
        <Button text="S'inscrire" onAction="#handleRegister" style="-fx-background-color: #0F9D58; -fx-text-fill: white;"/>
        <Button text="Retour" onAction="#handleRetour" style="-fx-background-color: #DB4437; -fx-text-fill: white;"/>
    </HBox>
    
    <Label fx:id="statusLabel" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" 
           GridPane.halignment="CENTER" style="-fx-text-fill: red;"/>
</GridPane>
